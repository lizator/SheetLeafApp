<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SheetLeafApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextZone">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/josefin_slab</item>
    </style>

    <style name="text">
        <item name="fontFamily">@font/josefin_slab_semibold</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="textSmall">
        <item name="fontFamily">@font/josefin_slab_bold</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="textTitle">
        <item name="fontFamily">@font/cardinal</item>
        <item name="android:textSize">70sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000</item>
    </style>

</resources>